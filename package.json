{
  "name": "justgit",
  "version": "1.0.0",
  "description": "A simple GitKraken clone built with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "dev": "concurrently \"vite\" \"wait-on http://127.0.0.1:9999 && electron . --dev\"",
    "build": "vite build && electron-builder",
    "pack": "vite build && electron-builder --dir",
    "build-renderer": "vite build",
    "dev-renderer": "vite",
    "preview": "vite preview",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "keywords": [
    "electron",
    "git",
    "gui",
    "version-control",
    "react",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "@types/diff": "^7.0.2",
    "@types/node": "^20.10.0",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/react-infinite-scroller": "^1.2.5",
    "@types/react-redux": "^7.1.34",
    "@types/refractor": "^3.4.1",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "postcss": "^8.5.6",
    "postcss-preset-mantine": "^1.18.0",
    "postcss-simple-vars": "^7.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@mantine/charts": "^8.1.2",
    "@mantine/core": "^8.1.2",
    "@mantine/form": "^8.1.2",
    "@mantine/hooks": "^8.1.2",
    "@mantine/modals": "^8.1.2",
    "@mantine/notifications": "^8.1.2",
    "@mantine/nprogress": "^8.1.2",
    "@mantine/spotlight": "^8.1.2",
    "@reduxjs/toolkit": "^2.8.2",
    "@types/react-virtualized": "^9.22.2",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^8.2.0",
    "prism-color-variables": "^1.0.1",
    "prismjs": "^1.30.0",
    "react": "^18.2.0",
    "react-diff-view": "^3.3.1",
    "react-dom": "^18.2.0",
    "react-infinite-scroller": "^1.2.6",
    "react-redux": "^9.2.0",
    "react-virtualized": "^9.22.6",
    "refractor": "^3.5.0",
    "simple-git": "^3.20.0"
  },
  "build": {
    "appId": "com.yourname.justgit",
    "productName": "JustGit",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/electron/**/*",
      "!src/**/*",
      "!vite.config.js",
      "!tsconfig.json"
    ]
  }
}
